{
  "name": "get-comics",
  "version": "1.1.1",
  "description": "Download comics from getcomics.info",
  "license": "MIT",
  "author": "Chris Sandvik <chris.sandvik@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/csandman/get-comics.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "bin": "bin/get-comics.js",
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "microbundle -f esm --target node",
    "dev": "microbundle watch -f esm --target node",
    "format": "prettier --write . && prettier-package-json --write",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "eslint .",
    "lint:types": "tsc --noEmit",
    "prepare": "husky install"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "archiver": "^5.3.1",
    "chalk": "^5.0.1",
    "cheerio": "^1.0.0-rc.10",
    "cli-progress": "^3.10.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "megajs": "^1.0.3",
    "mkdirp": "^1.0.4",
    "nanoid": "^3.3.3",
    "node-fetch": "^3.2.3",
    "node-unrar-js": "^1.0.6",
    "pretty-bytes": "^6.0.0",
    "rimraf": "^3.0.2",
    "yauzl": "^2.10.0",
    "zs-extract": "^1.4.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/cli-progress": "^3.9.2",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.25",
    "@types/rimraf": "^3.0.2",
    "@types/yauzl": "^2.10.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "microbundle": "^0.14.2",
    "prettier": "^2.6.2",
    "prettier-package-json": "^2.6.3",
    "typescript": "^4.6.3"
  },
  "keywords": [
    "comic",
    "downloader",
    "getcomics",
    "getcomics.info"
  ],
  "engines": {
    "node": "^12.17.0 || >=14.13.1"
  },
  "exports": "./dist/index.js",
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --ignore-unknown --write",
    "package.json": "prettier-package-json --write"
  },
  "source": "src/index.ts"
}
